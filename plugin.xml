<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.vagabond.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.vagabond.rcp.Perspective"
            id="VagabondRCP.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Database"
            class="org.vagabond.rcp.views.DBView"
            id="org.vagabond.rcp.views.dbview">
      </view>
      <view
            class="org.vagabond.rcp.views.ExplView"
            id="org.vagabond.rcp.views.explview"
            name="Explanations"
            restorable="true">
      </view>
      <view
            class="org.vagabond.rcp.views.MapView"
            id="org.vagabond.rcp.views.mapview"
            name="Mappings"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="org.vagabond.rcp.views.dbview"
               minimized="false"
               moveable="true"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
         <view
               id="org.vagabond.rcp.views.explview"
               minimized="false"
               moveable="true"
               ratio="0.75f"
               relationship="bottom"
               relative="org.vagabond.rcp.views.dbview"
               standalone="false">
         </view>
         <view
               id="org.vagabond.rcp.views.mapview"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.vagabond.rcp.views.dbview"
               standalone="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
         <menu
               id="connectionMenu"
               label="Configuration">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push">
            </command>
            <command
                  commandId="org.vagabond.rcp.util.start"
                  label="Start"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="VagabondRCP.application"
            name="Vagabond">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.vagabond.rcp.preferences.SchemaSettings"
            id="org.rcp.preferences.schemasettings"
            name="Schema Settings">
      </page>
      <page
            class="org.vagabond.rcp.preferences.DBSettings"
            id="org.rcp.preferences.dbsettings"
            name="Connection Settings">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.vagabond.rcp.util.StartHandler"
            id="org.vagabond.rcp.util.start"
            name="Start">
      </command>
   </extension>

</plugin>
